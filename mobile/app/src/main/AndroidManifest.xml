<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.SalesBuddy"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".view.activity.menu.MenuBottomSheetActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activity.common.ConnectionErrorActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.reprocessing.ReprocessingActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.sales.FinalizationActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.sales.ConfirmDataActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.sales.RegisterSalesActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".view.activity.home.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.auth.AuthenticationActivity"
            android:exported="false" />

        <activity
            android:name=".view.activity.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>