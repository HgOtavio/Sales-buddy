<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#CCFFFFFF">

    <ImageView
        android:id="@+id/btn_close_menu"

        android:layout_width="48dp"
        android:layout_height="45dp"

        android:layout_gravity="end"
        android:layout_marginBottom="0dp"

        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"

        android:contentDescription="Fechar menu"
        android:focusable="true"


        android:scaleType="fitCenter"
        android:src="@drawable/ic_close"

        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/tv_menu_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:paddingTop="0dp"

        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:text="REGISTRAR VENDA"
        android:textColor="#074A82"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_menu_reprocess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:padding="12dp"
        android:text="REPROCESSAR"
        android:textColor="#074A82"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_menu_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        android:text="LOG OUT"
        android:textColor="#074A82"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>